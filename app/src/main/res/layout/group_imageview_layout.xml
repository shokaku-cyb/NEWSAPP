<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/first_img_iv"
            android:layout_width="@dimen/sw_110dp"
            android:layout_height="@dimen/sw_70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/second_img_iv"
            android:layout_width="@dimen/sw_110dp"
            android:layout_height="@dimen/sw_70dp"
            app:layout_constraintEnd_toStartOf="@+id/third_img_iv"
            app:layout_constraintStart_toEndOf="@+id/first_img_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/third_img_iv"
            android:layout_width="@dimen/sw_110dp"
            android:layout_height="@dimen/sw_70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>